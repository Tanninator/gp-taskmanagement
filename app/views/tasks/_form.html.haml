= form_for @task do |f|
  - if @task.errors.any?
    #error_explanation
      %h2= "#{pluralize(@task.errors.count, "error")} prohibited this task from being saved:"
      %ul
        - @task.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :progress
    = f.number_field :progress
  .field
    = f.label :people
    = f.text_field :people
  .field
    = f.label :notes
    = f.text_field :notes
  .actions
    = f.submit 'Save'
